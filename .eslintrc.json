{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": [
            "error",
            "never"
        ],
        "indent": [
            "error",
            2
        ],
        "class-methods-use-this": 0,
        "max-len": [
            "error",
            {
                "code": 180
            }
        ],
        "no-new": 0,
        "no-param-reassign": 0,
        "no-new-func": 0,
        "prefer-rest-params": 0
    }
}